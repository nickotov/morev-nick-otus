{
  "name": "otus",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "dev": "nodemon",
    "dev:debug": "nodemon --config nodemon.debug.json",
    "build": "tsc --project tsconfig.json && tsc-alias",
    "watch": "tsc -w",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json}\"",
    "lesson-1": "npm run build && node dist/lessons/lesson-1.js",
    "lesson-4": "npm run build && INPUT_FILE=data/lesson-4-text OUTPUT_FILE=dist/data/lesson-4-output node dist/lessons/lesson-4.js",
    "lesson-5": "npm run test:coverage",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:tree": "jest --silent=false --config jest.config.js tree",
    "docker:up": "docker compose -f src/apps/best-course-ever/docker-compose.yml up -d",
    "docker:down": "docker compose -f src/apps/best-course-ever/docker-compose.yml down",
    "docker:restart": "docker compose -f src/apps/best-course-ever/docker-compose.yml restart"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.3.2",
    "tsc-alias": "^1.8.13",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^5.1.0"
  }
}
